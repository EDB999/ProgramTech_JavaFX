               <FlowPane.margin>
                  <Insets left="3.0" top="10.0" />
               </FlowPane.margin>
            </TextField>
            <Label text="р.">
               <FlowPane.margin>
                  <Insets top="10.0" />
               </FlowPane.margin>
               <font>
                  <Font name="Times New Roman" size="14.0" />
               </font>
            </Label>
         </children>
      </FlowPane>
      <HBox maxHeight="200.0" minHeight="100.0" prefHeight="100.0" prefWidth="150.0">
