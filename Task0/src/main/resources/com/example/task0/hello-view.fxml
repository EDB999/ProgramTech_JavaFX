               <HBox.margin>
                  <Insets left="100.0" top="25.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <HBox minHeight="100.0" prefHeight="100.0" prefWidth="150.0">
         <children>
            <Button fx:id="button3" mnemonicParsing="false" onAction="#NinePercentClick" prefHeight="20.0" prefWidth="80.0" style="-fx-background-color: Gray;" text="9%" textFill="WHITE">
               <font>
                  <Font name="Times New Roman" size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" top="20.0" />
