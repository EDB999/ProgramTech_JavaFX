            <Label fx:id="label4" text="Оплата">
               <HBox.margin>
                  <Insets left="100.0" top="15.0" />
               </HBox.margin>
               <font>
                  <Font name="Times New Roman" size="14.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </children>
