<VBox alignment="CENTER" prefHeight="553.0" prefWidth="350.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.task0.Task0Controller">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <children>
      <FlowPane prefHeight="40.0" prefWidth="200.0" prefWrapLength="50.0">
