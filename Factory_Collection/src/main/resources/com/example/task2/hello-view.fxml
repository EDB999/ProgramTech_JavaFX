<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="392.0" prefWidth="483.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.task2.Task2Controller">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <children>
      <FlowPane prefHeight="400.0" prefWidth="200.0">
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
         <children>
            <Label fx:id="Type" text="Число сторон-Название фигуры:" />
            <TextField fx:id="numShape" />
            <Button fx:id="buttonRollbackFigure" mnemonicParsing="false" onAction="#clickRollbackFigure" text="Откатиться">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <FlowPane.margin>
                  <Insets left="35.0" />
               </FlowPane.margin>
            </Button>
         </children>
      </FlowPane>
      <FlowPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <Label text="Цвет фигуры:" />
            <ColorPicker fx:id="colorPick" />
            <Button fx:id="buttonOpenFile" mnemonicParsing="false" onAction="#clickOpenFileMemory" text="Открыть файл">
               <FlowPane.margin>
                  <Insets left="75.0" />
               </FlowPane.margin>
            </Button>
            <Button fx:id="buttonSaveFile" mnemonicParsing="false" onAction="#clickSaveFileMemory" text="Сохранить">
               <FlowPane.margin>
                  <Insets />
               </FlowPane.margin>
            </Button>
         </children>
      </FlowPane>
      <Canvas fx:id="canv" height="297.0" onMouseClicked="#mouseClick" width="416.0" />
   </children>
</VBox>
